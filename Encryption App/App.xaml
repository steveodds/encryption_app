<Application x:Class="Encryption_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Encryption_App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomDefinitions(Style).xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="DisableCustomFocus" TargetType="{x:Type Control}">
                <Setter Property="Template" Value="{DynamicResource ControlControlTemplate1}"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>
